<mui:ModernDialog x:Class="pixiv_downloader.waitingForProcessing"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300"
                  Title="正在处理信息...">

    <!-- Note: ModernDialog buttons are defined in the constructor of the code behind class -->
    <StackPanel>
        <TextBlock x:Name="textBlock" Text="我们需要一点时间来处理刚才的操作..." />
        <ProgressBar Minimum="0" Maximum="1" Height="15" IsIndeterminate="True"/>
        <ProgressBar x:Name="progressbar" Minimum="0" Maximum="100" Height="15" Value="0" />
    </StackPanel>
    
</mui:ModernDialog>
